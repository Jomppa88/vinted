import React, { useState, useCallback, useEffect } from "react";
import { RefreshCw, Zap, Upload, X, Clipboard, Repeat, Tag, AlertTriangle, Search, Sparkles, Lightbulb, Globe, Share2 } from "lucide-react";

// Asetetaan globaalit muuttujat
const __app_id = "default-app-id";
const __firebase_config = "{}";
const __initial_auth_token = undefined;
const API_KEY = process.env.REACT_APP_GEMINI_KEY || "";
const API_MODEL = "gemini-2.5-flash-preview-09-2025";
const API_KEY = ""; // Locus t√§ytt√§√§ API-avaimen automaattisesti

const MAX_SIZE_MB = 10; 

// P√§ivitetty kiinte√§ viesti
const FIXED_CLOSING_MESSAGE = "\n\nPS. Katso my√∂s muut kohteeni ja s√§√§st√§ postikuluissa tilaamalla useampi tuote kerralla. Toimitus hyvin pakattuna samana tai seuraavana p√§iv√§n√§üòä";

const conditionOptions = [
    { value: "", label: "--- Valitse tuotteen kunto ---", description: "" },
    { value: "Uusi, jossa hintalappu", label: "Uusi, jossa hintalappu", description: "Uusi, k√§ytt√§m√§t√∂n tuote, jossa on hintalaput tai joka on alkuper√§ispakkauksessaan." },
    { value: "Uusi ilman hintalappua", label: "Uusi ilman hintalappua", description: "Uusi, k√§ytt√§m√§t√∂n tuote ilman hintalappua tai alkuper√§ispakkausta." },
    { value: "Eritt√§in hyv√§", label: "Eritt√§in hyv√§", description: "V√§h√§nk√§ytetty tuote, jossa voi olla pieni√§ puutteita mutta joka n√§ytt√§√§ edelleen hienolta." },
    { value: "Hyv√§", label: "Hyv√§", description: "K√§ytetty tuote, jossa voi olla virheit√§ ja k√§yt√∂n j√§lki√§." },
    { value: "Tyydytt√§v√§", label: "Tyydytt√§v√§", description: "Usein k√§ytetty tuote, jossa n√§kyy virheit√§ ja k√§yt√∂n j√§lki√§." },
];

async function fetchWithRetry(apiCall, maxRetries = 5, delay = 1000) {
    for (let i = 0; i < maxRetries; i++) {
        try {
            const response = await apiCall();
            if (response.ok) return await response.json();
        } catch (error) {
            console.warn(`API-kutsu ep√§onnistui: ${error.message}.`);
        }
        await new Promise(resolve => setTimeout(resolve, delay));
        delay *= 2; 
    }
    throw new Error("API-kutsu ep√§onnistui.");
}

const App = () => {
    const [selectedFile, setSelectedFile] = useState(null);
    const [previewUrl, setPreviewUrl] = useState(null);
    const [title, setTitle] = useState("");
    const [description, setDescription] = useState(null);
    const [translatedDescription, setTranslatedDescription] = useState("");
    const [estimatedPrice, setEstimatedPrice] = useState("");
    const [stylingTips, setStylingTips] = useState(""); 
    const [sellingTips, setSellingTips] = useState(""); 
    
    const [selectedConditionValue, setSelectedConditionValue] = useState("");
    const [customDetails, setCustomDetails] = useState("");
    const [isLoading, setIsLoading] = useState(false);
    const [loadingStatus, setLoadingStatus] = useState(null);
    const [message, setMessage] = useState(null);

    // --- PWA KONFIGURAATIO ---
    useEffect(() => {
        // Luodaan dynaaminen manifesti PWA-tukea varten
        const manifest = {
            "name": "Vinted A.I. Generaattori",
            "short_name": "Vinted AI",
            "start_url": ".",
            "display": "standalone",
            "background_color": "#ffffff",
            "theme_color": "#4f46e5",
            "description": "Luo myynti-ilmoitukset teko√§lyll√§.",
            "icons": [
                { "src": "https://cdn-icons-png.flaticon.com/512/1149/1149168.png", "sizes": "512x512", "type": "image/png" }
            ]
        };
        const stringManifest = JSON.stringify(manifest);
        const blob = new Blob([stringManifest], {type: "application/json"});
        const manifestURL = URL.createObjectURL(blob);
        const link = document.createElement("link");
        link.rel = "manifest";
        link.href = manifestURL;
        document.head.appendChild(link);

        // Meta-tagit iOS:lle
        const metaApp = document.createElement("meta");
        metaApp.name = "apple-mobile-web-app-capable";
        metaApp.content = "yes";
        document.head.appendChild(metaApp);
    }, []);

    const resetForm = useCallback(() => {
        setSelectedFile(null); setPreviewUrl(null); setTitle(""); setDescription(null);
        setTranslatedDescription(""); setEstimatedPrice(""); setStylingTips("");
        setSellingTips(""); setSelectedConditionValue(""); setCustomDetails("");
        setMessage(null); setLoadingStatus(null);
    }, []);

    const handleFileChange = useCallback((event) => {
        const file = event.target.files[0];
        if (!file) return;
        if (file.size > MAX_SIZE_MB * 1024 * 1024) {
            setMessage({ type: "error", text: `Tiedosto on liian suuri (max ${MAX_SIZE_MB}MB).` });
            return;
        }
        const reader = new FileReader();
        reader.onloadend = () => {
            setPreviewUrl(reader.result);
            setSelectedFile({ data: reader.result.split(",")[1], mimeType: file.type });
            setTitle(""); setDescription(null); setEstimatedPrice(""); setStylingTips(""); setSellingTips("");
        };
        reader.readAsDataURL(file);
    }, []);

    const generateCore = useCallback(async (isShortVersion) => {
        if (isLoading || !selectedFile || selectedConditionValue === "") return;
        setIsLoading(true); setMessage(null);
        try {
            setLoadingStatus("Luodaan kuvausta...");
            const lengthInstr = isShortVersion ? "Otsikko max 5 sanaa, kuvaus 2-3 lausetta." : "Otsikko max 7 sanaa, kuvaus 5-7 lausetta.";
            const textPrompt = `Olet Vinted-asiantuntija. Analysoi kuva. Luo myyv√§ otsikko ja kuvaus. ${lengthInstr} K√§yt√§ 1-3 emojia. Hashtagit suomeksi ja englanniksi. Erota otsikko ja kuvaus --- merkeill√§. √Ñl√§ k√§yt√§ muotoiluja kuten **.`;
            const textPayload = {
                contents: [{ role: "user", parts: [{ text: `Kunto: ${selectedConditionValue}. Lis√§tiedot: ${customDetails}. ${textPrompt}` }, { inlineData: { mimeType: selectedFile.mimeType, data: selectedFile.data } }] }],
                systemInstruction: { parts: [{ text: "Vastaa muodossa: Otsikko --- Kuvaus" }] }
            };
            const textRes = await fetchWithRetry(() => fetch(`https://generativelanguage.googleapis.com/v1beta/models/${API_MODEL}:generateContent?key=${API_KEY}`, {
                method: "POST", headers: { "Content-Type": "application/json" }, body: JSON.stringify(textPayload)
            }));
            const textParts = (textRes.candidates[0].content.parts[0].text || "").split("---").map(p => p.trim());
            setTitle(textParts[0]);
            setDescription((textParts[1] || "") + FIXED_CLOSING_MESSAGE);

            setLoadingStatus("Etsit√§√§n hintatietoja...");
            const pricePayload = {
                contents: [{ role: "user", parts: [{ text: `Tuote: ${textParts[0]}, Kunto: ${selectedConditionValue}. Etsi hinta Googlen avulla ja palauta vain euroalue (esim 10-20 ‚Ç¨).` }] }],
                tools: [{ "google_search": {} }]
            };
            const priceRes = await fetchWithRetry(() => fetch(`https://generativelanguage.googleapis.com/v1beta/models/${API_MODEL}:generateContent?key=${API_KEY}`, {
                method: "POST", headers: { "Content-Type": "application/json" }, body: JSON.stringify(pricePayload)
            }));
            setEstimatedPrice(priceRes.candidates[0].content.parts[0].text.replace(/[^0-9‚Ç¨\- ]/g, "").trim());

            setLoadingStatus("‚ú® Luodaan √§lykk√§it√§ vinkkej√§...");
            const tipsPayload = {
                contents: [{ role: "user", parts: [{ text: `Tuote: ${textParts[0]}. Luo kaksi lyhytt√§ vastausta erotettuna "---" merkill√§: stailausehdotus ja myyntivinkki.` }] }],
                systemInstruction: { parts: [{ text: "Vastaa vain sis√§ll√∂ill√§ ilman otsikoita. K√§yt√§ emojeita." }] }
            };
            const tipsRes = await fetchWithRetry(() => fetch(`https://generativelanguage.googleapis.com/v1beta/models/${API_MODEL}:generateContent?key=${API_KEY}`, {
                method: "POST", headers: { "Content-Type": "application/json" }, body: JSON.stringify(tipsPayload)
            }));
            const tipsParts = (tipsRes.candidates[0].content.parts[0].text || "").split("---").map(p => p.trim());
            setStylingTips(tipsParts[0]);
            setSellingTips(tipsParts[1]);
            setMessage({ type: "success", text: "Kaikki valmiina! ‚ú®" });
        } catch (error) {
            setMessage({ type: "error", text: "Virhe generoitaessa tietoja." });
        } finally {
            setIsLoading(false); setLoadingStatus(null);
        }
    }, [selectedFile, selectedConditionValue, customDetails, isLoading]);

    const translateToEnglish = async () => {
        if (!description || isLoading) return;
        setIsLoading(true); setLoadingStatus("‚ú® K√§√§nnet√§√§n...");
        try {
            const payload = { contents: [{ role: "user", parts: [{ text: `Translate to English. Keep tone and emojis: ${description}` }] }] };
            const res = await fetchWithRetry(() => fetch(`https://generativelanguage.googleapis.com/v1beta/models/${API_MODEL}:generateContent?key=${API_KEY}`, {
                method: "POST", headers: { "Content-Type": "application/json" }, body: JSON.stringify(payload)
            }));
            setTranslatedDescription(res.candidates[0].content.parts[0].text);
        } catch (e) { setMessage({ type: "error", text: "K√§√§nn√∂s ep√§onnistui." }); }
        finally { setIsLoading(false); setLoadingStatus(null); }
    };

    const copyToClipboard = (text) => {
        const ta = document.createElement("textarea");
        ta.value = text; document.body.appendChild(ta); ta.select();
        document.execCommand("copy"); document.body.removeChild(ta);
        setMessage({ type: "success", text: "Kopioitu!" });
    };

    return (
        <div className="p-4 sm:p-8 min-h-screen bg-indigo-50 flex justify-center font-sans pb-20">
            <div className="w-full max-w-xl bg-white rounded-3xl shadow-2xl p-6 md:p-8 border border-indigo-100">
                <div className="flex justify-between items-center mb-6">
                    <h1 className="text-4xl font-black text-indigo-700 tracking-tight">Vinted A.I.</h1>
                    <button onClick={() => copyToClipboard(window.location.href)} className="p-2 text-indigo-400 hover:text-indigo-600"><Share2 className="w-6 h-6" /></button>
                </div>

                <div className="mb-6">
                    {!previewUrl ? (
                        <label className="flex flex-col items-center justify-center w-full h-44 border-4 border-dashed border-indigo-100 rounded-3xl cursor-pointer bg-indigo-50/30 hover:bg-indigo-50 transition-all group">
                            <Upload className="w-12 h-12 text-indigo-300 mb-3 group-hover:scale-110 transition-transform" />
                            <span className="text-indigo-700 font-bold text-lg">Valitse tai ota kuva</span>
                            <span className="text-xs text-indigo-300 mt-1 uppercase tracking-widest font-black">Max {MAX_SIZE_MB}MB</span>
                            <input type="file" accept="image/*" className="sr-only" onChange={handleFileChange} disabled={isLoading} />
                        </label>
                    ) : (
                        <div className="relative rounded-3xl overflow-hidden shadow-2xl border-4 border-white">
                            <img src={previewUrl} alt="Esikatselu" className="w-full h-56 object-cover" />
                            <button onClick={resetForm} className="absolute top-3 right-3 p-2 bg-red-500/80 backdrop-blur-md text-white rounded-full hover:bg-red-600 transition shadow-lg"><X className="w-5 h-5" /></button>
                        </div>
                    )}
                </div>

                {message && (
                    <div className={`p-4 rounded-2xl mb-6 text-sm font-bold border-2 animate-bounce-short ${message.type === "error" ? "bg-red-50 border-red-100 text-red-700" : "bg-green-50 border-green-100 text-green-700"}`}>
                        {message.text}
                    </div>
                )}

                <div className="space-y-4 mb-8">
                    <div className="bg-indigo-50/50 p-4 rounded-2xl border border-indigo-100">
                        <label className="block text-xs font-black text-indigo-400 uppercase mb-2">Tuotteen kunto</label>
                        <select value={selectedConditionValue} onChange={(e) => setSelectedConditionValue(e.target.value)} className="w-full bg-transparent font-bold text-gray-800 outline-none cursor-pointer" disabled={isLoading}>
                            {conditionOptions.map(o => <option key={o.value} value={o.value}>{o.label}</option>)}
                        </select>
                    </div>
                    <div className="bg-indigo-50/50 p-4 rounded-2xl border border-indigo-100">
                        <label className="block text-xs font-black text-indigo-400 uppercase mb-2">Lis√§tiedot</label>
                        <textarea value={customDetails} onChange={(e) => setCustomDetails(e.target.value)} className="w-full bg-transparent font-medium text-gray-800 outline-none resize-none" rows="2" placeholder="Koko, v√§ri, br√§ndi..." disabled={isLoading} />
                    </div>
                </div>

                <button onClick={() => generateCore(false)} disabled={isLoading || !selectedFile || !selectedConditionValue} className="w-full py-5 bg-indigo-600 text-white rounded-3xl font-black text-xl shadow-xl shadow-indigo-200 hover:bg-indigo-700 active:scale-[0.98] transition-all disabled:opacity-50">
                    {isLoading ? <div className="flex items-center justify-center gap-3"><RefreshCw className="animate-spin" /> {loadingStatus}</div> : "LUO ILMOITUS ‚ú®"}
                </button>

                {title && (
                    <div className="mt-10 space-y-8 animate-in fade-in slide-in-from-bottom-6 duration-700">
                        <div className="space-y-2">
                            <div className="flex justify-between items-end"><h3 className="text-xs font-black text-indigo-300 uppercase tracking-widest">Otsikko</h3><button onClick={() => copyToClipboard(title)} className="text-indigo-600 font-bold text-xs uppercase">Kopioi</button></div>
                            <p className="text-2xl font-black text-gray-900 border-b-2 border-indigo-50 pb-2">{title}</p>
                        </div>

                        <div className="space-y-4">
                            <div className="flex justify-between items-center"><h3 className="text-xs font-black text-indigo-300 uppercase tracking-widest">Kuvaus</h3><div className="flex gap-3"><button onClick={translateToEnglish} className="bg-blue-50 text-blue-600 p-2 rounded-xl"><Globe className="w-4 h-4" /></button><button onClick={() => generateCore(true)} className="bg-amber-50 text-amber-600 p-2 rounded-xl"><Zap className="w-4 h-4" /></button><button onClick={() => copyToClipboard(description)} className="bg-indigo-600 text-white px-4 py-2 rounded-xl text-xs font-bold shadow-md">Kopioi kaikki</button></div></div>
                            <div className="bg-indigo-50/30 p-5 rounded-3xl border border-indigo-50 leading-relaxed text-gray-800 whitespace-pre-wrap">{description}</div>
                            
                            {translatedDescription && (
                                <div className="p-5 rounded-3xl border-2 border-blue-100 bg-blue-50/30 animate-in zoom-in-95 duration-300">
                                    <div className="flex justify-between mb-2"><span className="text-[10px] font-black text-blue-400 uppercase">English Translation</span><button onClick={() => copyToClipboard(translatedDescription)} className="text-blue-600 font-bold text-[10px] uppercase">Kopioi</button></div>
                                    <p className="text-sm text-blue-900 italic leading-relaxed">{translatedDescription}</p>
                                </div>
                            )}
                        </div>

                        <div className="bg-gradient-to-br from-green-500 to-emerald-600 p-8 rounded-[2rem] shadow-2xl text-white relative overflow-hidden group">
                            <Tag className="absolute -right-4 -bottom-4 w-32 h-32 opacity-10 rotate-12 group-hover:scale-110 transition-transform" />
                            <h3 className="text-xs font-black uppercase opacity-70 mb-1 tracking-widest">Hinta-arvio verkosta</h3>
                            <p className="text-5xl font-black">{estimatedPrice || "Lasketaan..."}</p>
                            <p className="text-[10px] mt-4 opacity-60 font-medium">*Arvio perustuu vastaaviin myytyihin kohteisiin.</p>
                        </div>

                        <div className="grid grid-cols-1 gap-4">
                            <div className="bg-purple-50 p-6 rounded-3xl border border-purple-100 relative group">
                                <Sparkles className="absolute right-4 top-4 w-5 h-5 text-purple-200" />
                                <h3 className="text-purple-700 font-black text-sm mb-2 uppercase flex items-center gap-2">Stailaus <button onClick={() => copyToClipboard(stylingTips)} className="ml-auto text-[10px] bg-purple-200 px-2 py-1 rounded-md">Kopioi</button></h3>
                                <p className="text-sm text-purple-900 leading-relaxed font-medium italic">{stylingTips}</p>
                            </div>
                            <div className="bg-amber-50 p-6 rounded-3xl border border-amber-100">
                                <h3 className="text-amber-700 font-black text-sm mb-2 uppercase">Myyntivinkki</h3>
                                <p className="text-sm text-amber-900 leading-relaxed font-medium">{sellingTips}</p>
                            </div>
                        </div>
                    </div>
                )}
                
                <div className="mt-12 text-center">
                    <p className="text-[10px] font-black text-indigo-200 uppercase tracking-[0.2em]">S√§√§st√§ aikaa ‚Äì Myy enemm√§n</p>
                </div>
            </div>
        </div>
    );
};

export default App;
